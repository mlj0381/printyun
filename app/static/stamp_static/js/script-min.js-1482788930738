var api,boundx,boundy;function storeCoords(a){$("#x").val(a.x);$("#y").val(a.y);$("#w").val(a.w);$("#h").val(a.h)}function reversal(e){if(typeof api!="undefined"){api.destroy()}var b=$("#resWidth").val();var d=$("#resHeight").val();var c=$("#imWidth").val();var a=$("#imHeight").val();api=$.Jcrop("#preview",{bgFade:true,allowResize:true,maxSize:[c,a],aspectRatio:e,boxWidth:b,boxHeight:d,setSelect:[0,0,c,a],allowSelect:true,onSelect:storeCoords,onChange:storeCoords,handleSize:12,bgOpacity:0.3,},function(){var f=this.getBounds();boundx=f[0];boundy=f[1];api=this})}function fileSelectHandler(d,b){var a=document.getElementById("preview");var c=new FileReader();c.readAsDataURL(b.files[0]);c.onload=function(f){a.src=f.target.result;a.onload=function(){var g=a.width;var e=a.height;$("#imWidth").val(g);$("#imHeight").val(e);if(e>=g){$("#horOrPer").val(1)}else{$("#horOrPer").val(0)}var h=getWidthAndHeight(g,e,350,350);$("#resWidth").val(h[0]);$("#resHeight").val(h[1]);$(".step2").fadeIn(500);reversal(d)}}}function fileSelectHandlerLowIe(ratio,data){if(!isEmptyValue(data)){data=eval("("+data+")");var oImage=document.getElementById("preview");$("#preview").attr("src","data:;base64,"+data.str_img);$("#str_img").val(data.str_img);$("#cutFileName").val(data.fileName);var width=$("#preview").width();var height=$("#preview").height();$("#imWidth").val(width);$("#imHeight").val(height);if(height>=width){$("#horOrPer").val(1)}else{$("#horOrPer").val(0)}var arrObj=getWidthAndHeight(width,height,350,350);$("#resWidth").val(arrObj[0]);$("#resHeight").val(arrObj[1]);$(".step2").fadeIn(500);reversal(ratio)}};
